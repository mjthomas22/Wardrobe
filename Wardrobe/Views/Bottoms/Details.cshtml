@model Wardrobe.Models.Bottom

@{
    ViewBag.Title = "Details";
}

<h2 class="wardrobeHeader">Details</h2>
<div class="containerDetails">
    <div class="container ">
        <div class="row ">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="panel panel-default  panel--styled">
                    <div class="panel-body">
                        <div class="col-md-12 panelTop">
                            <div class="col-md-4">
                                <img class="img-responsive" id="stars" src=@Html.DisplayFor(model => model.BottomPhoto) />
                            </div>
                            <div class="col-md-4">
                            </div>
                            <div class="col-md-4">
                                <h4>@Html.DisplayFor(model => model.BottomName)</h4>
                                <h4>Style: @Html.DisplayFor(model => model.BottomType.BottomType1)</h4>
                                <h4>Color: @Html.DisplayFor(model => model.Color.Color1)</h4>
                                <h4>Occasion: @Html.DisplayFor(model => model.Occasion.Occasion1)</h4>
                                <h4>Season: @Html.DisplayFor(model => model.Season.Season1)</h4>
                            </div>
                        </div>

                        <div class="col-md-12 panelBottom">
                            <div class="col-md-4 ">
                                <a class="btn btn-lg btn-default wardBTN detailBTN" href="@Url.Action("Index", "Bottoms")">Go Back &raquo;</a>
                            </div>
                            <div class="col-md-4">
                                <a class="btn btn-lg btn-default wardBTN detailBTN" href="@Url.Action("Edit", "Bottoms", new { id=Model.BottomID })">Edit &raquo;</a>
                            </div>
                            <div class="col-md-4">
                                <a class="btn btn-lg btn-default wardBTN detailBTN" href="@Url.Action("Delete", "Bottoms", new { id=Model.BottomID })">Delete &raquo;</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
</div>