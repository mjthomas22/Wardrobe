@model Wardrobe.Models.Top

@{
    ViewBag.Title = "Create";
}

<h2 class="wardrobeHeader">Add more tops</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-6">
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <p class="control-label col-md-2">Name your top</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TopsName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TopsName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <p class="control-label col-md-2">Link an image</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TopsPhoto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TopsPhoto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <p class="control-label col-md-2">Style</p>
                <div class="col-md-10">
                    @Html.DropDownList("TopsTypeID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TopsTypeID, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="form-group">
                <p class="control-label col-md-2">Color</p>
                <div class="col-md-10">
                    @Html.DropDownList("ColorID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ColorID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <p class="control-label col-md-2">Season</p>
                <div class="col-md-10">
                    @Html.DropDownList("SeasonID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SeasonID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <p class="control-label col-md-2">Occasion</p>
                <div class="col-md-10">
                    @Html.DropDownList("OccasionID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.OccasionID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <h4>Add styles  <a href="@Url.Action("Create","TopsTypes")"><span class="glyphicon glyphicon-plus glySize"></span></a></h4>
        <h4>Add colors  <a href="@Url.Action("Create","Colors")"><span class="glyphicon glyphicon-plus glySize"></span></a></h4>
        <h4>Add seasons  <a href="@Url.Action("Create","Seasons")"><span class="glyphicon glyphicon-plus glySize"></span></a></h4>
        <h4>Add occasions  <a href="@Url.Action("Create","Occasions")"><span class="glyphicon glyphicon-plus glySize"></span></a></h4>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
