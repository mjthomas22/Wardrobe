@model IEnumerable<Wardrobe.Models.Top>

@{
    ViewBag.Title = "Index";
}

@*Added variable to count number of items in model four carousel*@

@{
    int numberOfSlides = Model.Count();
}

<h2 class="wardrobeHeader">Tops</h2>

<span><a href="@Url.Action("Index","Tops")" class="btn btn-primary btn-lg wardBTN">All Tops &raquo;</a></span>
@*Was going to added other functionality to be able to filter through various options*@

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>

        @*Created for loop to count and create the number of slides needed to auto fill carousel with wardrobe items*@

        @{
            for (int i = 1; i <= numberOfSlides; i++)
            {
                <li data-target="#myCarousel" data-slide-to="@i;"></li>
            }
        }
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img class="carouselIMG" src="~/Content/Images/Tops/blackshirt.jpg" alt="Los Angeles">
            <a href="@Url.Action("Create","Tops")" class="btn btn-primary btn-lg carouselBTN">Add Top &raquo;</a>
        </div>

        @*Foreach loop to fill the carousel slides with the appropriate picture and buttons for that item.*@

        @foreach (var item in Model)
        {
            <div class="item">
                <img class="carouselIMG" src="@Html.DisplayFor(modelItem => item.TopsPhoto)" alt="">
                <a href="@Url.Action("Create","Tops")" class="btn btn-primary btn-lg carouselBTN">Add Top &raquo;</a>
                <span><a href="@Url.Action("Edit", "Tops", new { id=item.TopsID })" class="btn btn-primary btn-lg inCarouselBTN">Edit &raquo;</a></span>
                <span><a href="@Url.Action("Details", "Tops", new { id=item.TopsID })" class="btn btn-primary btn-lg inCarouselBTN">View &raquo;</a></span>
                <span><a href="@Url.Action("Delete", "Tops", new { id=item.TopsID })" class="btn btn-primary btn-lg inCarouselBTN">Delete &raquo;</a></span>
            </div>
        }

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
